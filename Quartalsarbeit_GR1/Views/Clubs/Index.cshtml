@model IEnumerable<Quartalsarbeit_GR1.Models.Club>

@{
    ViewBag.Title = "Index";
}

<h2>Vereine</h2>

<table id="clubs" class="table table-bordered table-hover" style="width:100%;">
    <thead>
        <tr>
            <th>Vereinsname</th>
            <th>Ort</th>
            <th>PLZ</th>
            <th>Strasse</th>
            <th>Email</th>
            <th>Athleten</th>
            <th>Bearbeiten</th>
            <th>Löschen</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#clubs").DataTable({
                ajax: {
                    url: "/api/Clubs",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "vereinsname",
                    },
                    {
                        data: "ort",
                    },
                    {
                        data: "plz",
                    },
                    {
                        data: "strasse",
                    },
                    {
                        data: "vereinsverantwortlicher.email",
                    },
                    {
                        data: "id",
                        render: function (data, type, event) {
                            return "<a href='/Clubs/Athletes/" + event.id + "'>Athleten</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data, type, event) {
                            return "<a href='/Clubs/edit/" + event.id + "'>Bearbeiten</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-athlete-id=" + data + ">Löschen</button>";
                        }
                    }
                ]
            });

            $("#clubs").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this Club?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Clubs/" + button.attr("data-categories-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}