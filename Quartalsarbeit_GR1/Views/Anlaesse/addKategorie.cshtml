@using Quartalsarbeit_GR1.Models;
@using System.Web.Mvc;
@model Tuple<List<Kategorie>, List<Disziplin>>
@{
    ViewBag.Title = "Add";
}

<h2>Konfiguration</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        @Html.DropDownListFor(item => item.Item1, new SelectList(Model.Item1, "Id", "Bezeichnung"))
        <br />
        @Html.DropDownList("Disziplin", new SelectList(Model.Item2, "Id", "Bezeichnung"))


        

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    <!-- Hardcodiert ya salame -->
    @Html.ActionLink("Back to List", "Konfiguration/1")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    
}
