@model IEnumerable<Quartalsarbeit_GR1.Models.Event>

@{
    ViewBag.Title = "Anlässe";
}

<h2>Anlässe</h2>

<table id="events" class="table table-bordered table-hover" style="width:100%;">
    <thead>
        <tr>
            <th>Bezeichnung</th>
            <th>Ort</th>
            <th>Datum</th>
            <th>Teilnehmen</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#events").DataTable({
                ajax: {
                    url: "/api/Events",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "bezeichnung",
                    },
                    {
                        data: "ort",
                    },
                    {
                        data: "datum",
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-athlete-id=" + data + ">Teilnehmen</button>";
                        }
                    }
                ]
            });
        });
    </script>
}