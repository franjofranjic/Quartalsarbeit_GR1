@model IEnumerable<Quartalsarbeit_GR1.Models.Event>

@{
    ViewBag.Title = "Anlaesse";
}

<h2>Anlässe</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

<table id="events" class="table table-bordered table-hover" style="width:100%;">
    <thead>
        <tr>
            <th>Bezeichnung</th>
            <th>Ort</th>
            <th>Datum</th>
            <th>Konfiguration</th>
            <th>Teilnehmer</th>
            <th>Startnummer Block</th>
            <th>Bearbeiten</th>
            <th>Löschen</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var table = $("#events").DataTable({
                ajax: {
                    url: "/api/Events",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "bezeichnung",
                    },
                    {
                        data: "ort",
                    },
                    {
                        data: "datum",
                        render: function (data, type) {
                            var d = new Date(data),
                                month = '' + (d.getMonth() + 1),
                                day = '' + d.getDate(),
                                year = d.getFullYear();

                            if (month.length < 2)
                                month = '0' + month;
                            if (day.length < 2)
                                day = '0' + day;

                            return [year, month, day].join('-');
                        }
                    },
                    {
                        data: "id",
                        render: function (data, type, event) {
                            return "<a href='/events/Configuration/" + event.id + "'>Konfiguration</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data, type, event) {
                            return "<a href='/events/participants/" + event.id + "'>Teilnehmer</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data, type, event) {
                            return "<a href='/events/StartNumberConfigurationEdit/?eventID=" + event.id + "'>Startnummernblock</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data, type, event) {
                            return "<a href='/events/edit/" + event.id + "'>Bearbeiten</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-event-id=" + data + ">Löschen</button>";
                        }
                    }
                ]
            });

            $("#events").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this Event?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Events/" + button.attr("data-event-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });

        });
    </script>
}