@using Quartalsarbeit_GR1.Models;
@model Club

@{
    ViewBag.Title = "Index";
}

<h2>Athlet</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<div data-club="@Model.ID" id="club"></div>
<table id="athletes" class="table table-bordered table-hover" style="width:100%;">
    <thead>
        <tr>
            <th>Vorname</th>
            <th>Nachname</th>
            <th>Geburtstag</th>
            <th>Gewicht</th>
            <th>Grösse</th>
            <th>Verein</th>
            <th>Bearbeiten</th>
            <th>Löschen</th>
        </tr>
    </thead>
    <tbody>
    </tbody>
</table>
@section scripts
{
    <script>
        $(document).ready(function () {
            var clubID = $("#club").attr("data-club").valueOf();

            var table = $("#athletes").DataTable({
                ajax: {
                    url: "/api/Athletes/getByClub/" + clubID,
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "vorname",
                    },
                    {
                        data: "nachname",
                    },
                    {
                        data: "geburtstag",
                        render: function (data, type) {
                            var d = new Date(data),
                                month = '' + (d.getMonth() + 1),
                                day = '' + d.getDate(),
                                year = d.getFullYear();

                            if (month.length < 2)
                                month = '0' + month;
                            if (day.length < 2)
                                day = '0' + day;

                            return [year, month, day].join('-');
                        }
                    },
                    {
                        data: "gewicht",
                    },
                    {
                        data: "groesse",
                    },
                    {
                        data: "verein.vereinsname",
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<a href='/Athletes/edit/" + data+"'>Bearbeiten</a>";
                        }
                    },
                    {
                        data: "id",
                        render: function (data) {
                            return "<button class='btn-link js-delete' data-athlete-id=" + data + ">Delete</button>";
                        }
                    }
                ]
            });

            $("#athletes").on("click", ".js-delete", function () {
                var button = $(this);

                bootbox.confirm("Are you sure you want to delete this Club?", function (result) {
                    if (result) {
                        $.ajax({
                            url: "/api/Athletes/" + button.attr("data-athlete-id"),
                            method: "DELETE",
                            success: function () {
                                table.row(button.parents("tr")).remove().draw();
                            }
                        });
                    }
                });
            });
        });
    </script>
}